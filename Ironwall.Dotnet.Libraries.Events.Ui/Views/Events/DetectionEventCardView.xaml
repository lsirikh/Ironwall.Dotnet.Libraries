<UserControl
	x:Class="Ironwall.Dotnet.Libraries.Events.Ui.Views.Events.DetectionEventCardView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:behavior="clr-namespace:Ironwall.Dotnet.Libraries.Utils.Behaviors;assembly=Ironwall.Dotnet.Libraries.Utils"
	xmlns:behavior_inner="clr-namespace:Ironwall.Dotnet.Libraries.Events.Ui.Behaviors"
	xmlns:cal="http://caliburnmicro.com"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:enums="clr-namespace:Ironwall.Dotnet.Libraries.Enums;assembly=Ironwall.Dotnet.Libraries.Enums"
	xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
	xmlns:local="clr-namespace:Ironwall.Dotnet.Libraries.Events.Ui.Views.Panels"
	xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
	xmlns:sys="clr-namespace:System;assembly=mscorlib"
	xmlns:utilPass="clr-namespace:Ironwall.Dotnet.Libraries.Utils.PasswordControl;assembly=Ironwall.Dotnet.Libraries.Utils"
	xmlns:utils="clr-namespace:Ironwall.Dotnet.Libraries.Utils;assembly=Ironwall.Dotnet.Libraries.Utils"
	FontFamily="{DynamicResource MaterialDesignFont}"
	TextElement.Foreground="{DynamicResource MaterialDesignBody}"
	mc:Ignorable="d">

	<md:Flipper
		md:ElevationAssist.Elevation="Dp0"
		Background="#88FFFFFF"
		Style="{StaticResource MaterialDesignCardFlipper}">
		<md:Flipper.FrontContent>
			<Border
				BorderBrush="#33000000"
				BorderThickness="2"
				CornerRadius="5">
				<Grid Width="250" Height="200">
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto" />
						<RowDefinition Height="4*" />
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
					</Grid.RowDefinitions>

					<md:ColorZone
						Grid.Row="0"
						Padding="5"
						Mode="PrimaryMid">
						<StackPanel Orientation="Horizontal">
							<Button
								HorizontalAlignment="Left"
								Command="{x:Static md:Flipper.FlipCommand}"
								Foreground="White"
								Opacity="1"
								Style="{StaticResource MaterialDesignToolForegroundButton}">
								<md:PackIcon
									Width="25"
									Height="25"
									VerticalAlignment="Center"
									HorizontalContentAlignment="Center"
									Foreground="#FFDD2C00"
									Kind="MotionSensor"
									Opacity="1" />
							</Button>
							<TextBlock
								Margin="8,0,0,0"
								VerticalAlignment="Center"
								FontSize="16"
								Foreground="White"
								Opacity="1"
								Text="탐지 이벤트" />
						</StackPanel>
					</md:ColorZone>
					<Grid Grid.Row="1" Margin="5">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="2*" />
							<ColumnDefinition Width="8*" />
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition Height="Auto" />
							<RowDefinition Height="Auto" />
						</Grid.RowDefinitions>
						<!--  탐지 정보 Custom 구현 시작  -->
						<!--<TextBlock
                               Grid.Column="0"
                               FontFamily="{StaticResource NotoSansCJKkRMedium}"
                               FontSize="20"
                               Foreground="White"
                               Opacity="1">

							<TextBlock.Text>
								<MultiBinding  StringFormat="Area {0} - Sensor No.{1}"
                                           FallbackValue="Area 1 - Sensor No.1">
									<Binding Path="NameArea" />
									<Binding Path="NameDevice" />
								</MultiBinding>
							</TextBlock.Text>
						</TextBlock>-->
						<Grid
							Grid.Row="0"
							Grid.Column="0"
							Grid.ColumnSpan="2"
							Margin="10,0,0,0"
							VerticalAlignment="Center">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="Auto" />
								<ColumnDefinition Width="Auto" />
								<ColumnDefinition Width="Auto" />
								<ColumnDefinition Width="Auto" />
								<ColumnDefinition Width="Auto" />
							</Grid.ColumnDefinitions>
							<TextBlock
								Grid.Column="0"
								FontFamily="{StaticResource NotoSansCJKkRMedium}"
								FontSize="20"
								Opacity="1"
								Text="구역"
								TextAlignment="Center" />
							<TextBlock
								Grid.Column="1"
								Margin="5,0"
								FontFamily="{StaticResource NotoSansCJKkRMedium}"
								FontSize="20"
								Opacity="1"
								Text="{Binding Device.DeviceGroup}"
								TextAlignment="Center" />
							<TextBlock
								Grid.Column="2"
								Margin="5,0"
								FontFamily="{StaticResource NotoSansCJKkRMedium}"
								FontSize="20"
								Opacity="1"
								Text="-"
								TextAlignment="Center" />
							<TextBlock
								Grid.Column="3"
								Margin="5,0"
								FontFamily="{StaticResource NotoSansCJKkRMedium}"
								FontSize="20"
								Opacity="1"
								Text="센서"
								TextAlignment="Center" />
							<TextBlock
								Grid.Column="4"
								Margin="5,0"
								FontFamily="{StaticResource NotoSansCJKkRMedium}"
								FontSize="20"
								Opacity="1"
								Text="{Binding Device.DeviceNumber}"
								TextAlignment="Center" />
						</Grid>

						<!--  탐지 정보 Custom 구현 종료  -->
						<TextBlock
							Grid.Row="1"
							Grid.Column="0"
							Grid.ColumnSpan="2"
							HorizontalAlignment="Right"
							VerticalAlignment="Bottom"
							FontFamily="{StaticResource NotoSansCJKkRMedium}"
							FontSize="16"
							Opacity="1"
							Text="{Binding MessageType, FallbackValue=타입, Mode=OneWay}" />

					</Grid>
					<Separator
						Grid.Row="2"
						Margin="0"
						Style="{StaticResource MaterialDesignLightSeparator}" />
					<StackPanel Grid.Row="3" Margin="10">
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="Auto" />
								<ColumnDefinition Width="Auto" />
								<ColumnDefinition Width="12" />
								<ColumnDefinition Width="*" />
							</Grid.ColumnDefinitions>

							<Button
								Grid.Column="0"
								Padding="8,0,8,0"
								VerticalAlignment="Center"
								VerticalContentAlignment="Center"
								md:RippleAssist.IsCentered="True"
								Style="{StaticResource MaterialDesignFlatButton}"
								ToolTip="{DynamicResource EventRemove_Title}">
								<cal:Message.Attach>
									[Event Click] = [Action OnButtonAction($source, $eventArgs)];
								</cal:Message.Attach>
								<md:PackIcon Kind="CommentOutline" />
							</Button>
							<Button
								Grid.Column="1"
								Padding="8,0,8,0"
								VerticalAlignment="Center"
								VerticalContentAlignment="Center"
								md:RippleAssist.IsCentered="True"
								Style="{StaticResource MaterialDesignFlatButton}"
								ToolTip="{DynamicResource CameraPopup}">
								<cal:Message.Attach>
									[Event Click] = [Action OnButtonCameraPopup($source, $eventArgs)];
								</cal:Message.Attach>
								<md:PackIcon
									Width="23"
									Height="23"
									Kind="VideoCheckOutline" />
							</Button>

							<TextBlock
								Grid.Column="3"
								HorizontalAlignment="Right"
								VerticalAlignment="Center"
								FontSize="12"
								Opacity="1"
								Text="{Binding DateTime, Mode=OneWay, StringFormat=yyyy-MM-dd HH:mm:ss, FallbackValue=2020-11-20 12:30:10}" />
						</Grid>
					</StackPanel>
				</Grid>
			</Border>
		</md:Flipper.FrontContent>

		<md:Flipper.BackContent>
			<Border
				BorderBrush="#33000000"
				BorderThickness="2"
				CornerRadius="5">

				<Grid Width="250" Height="200">
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto" />
						<RowDefinition Height="3*" />
					</Grid.RowDefinitions>
					<md:ColorZone
						Grid.Row="0"
						Padding="5"
						CornerRadius="5,5,0,0"
						Mode="PrimaryMid">
						<StackPanel Orientation="Horizontal">
							<Button
								HorizontalAlignment="Left"
								Command="{x:Static md:Flipper.FlipCommand}"
								Opacity="1"
								Style="{StaticResource MaterialDesignToolForegroundButton}">
								<md:PackIcon
									Width="25"
									Height="25"
									HorizontalAlignment="Right"
									Kind="ArrowLeft" />
							</Button>
							<TextBlock
								Margin="8,0,0,0"
								VerticalAlignment="Center"
								FontSize="16"
								Opacity="1"
								Text="상세" />
						</StackPanel>
					</md:ColorZone>
					<Grid
						Grid.Row="1"
						Margin="5"
						VerticalAlignment="Top">
						<Grid.RowDefinitions>
							<RowDefinition />
							<RowDefinition />
							<RowDefinition />
							<RowDefinition />
						</Grid.RowDefinitions>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="3*" />
							<ColumnDefinition Width="7*" />
						</Grid.ColumnDefinitions>
						<TextBlock
							Grid.Row="0"
							Grid.Column="0"
							Margin="5,0,0,0"
							VerticalAlignment="Center"
							Text="제어기" />
						<TextBox
							Grid.Row="0"
							Grid.Column="1"
							Margin="10,10,0,0"
							md:HintAssist.Hint="제어기 아이디"
							md:HintAssist.IsFloating="True"
							IsReadOnly="True"
							Opacity="1"
							Text="{Binding Device.Controller.Id, Mode=TwoWay}" />
						<TextBlock
							Grid.Row="1"
							Grid.Column="0"
							Margin="5,0,0,0"
							VerticalAlignment="Center"
							Text="센서" />
						<TextBox
							Grid.Row="1"
							Grid.Column="1"
							Margin="10,10,0,0"
							md:HintAssist.Hint="센서 아이디"
							md:HintAssist.IsFloating="True"
							IsReadOnly="True"
							Opacity="1"
							Text="{Binding Device.DeviceNumber, Mode=OneWay}" />
						<TextBlock
							Grid.Row="2"
							Grid.Column="0"
							Margin="5,0,0,0"
							VerticalAlignment="Center"
							Text="결과" />
						<TextBox
							Grid.Row="2"
							Grid.Column="1"
							Margin="10,10,0,0"
							md:HintAssist.Hint="이벤트종류"
							md:HintAssist.IsFloating="True"
							IsReadOnly="True"
							Opacity="1"
							Text="{Binding Result, Mode=OneWay}" />
						<TextBlock
							Grid.Row="3"
							Grid.Column="0"
							Margin="5,0,0,0"
							VerticalAlignment="Center"
							Text="이벤트 시간"
							TextWrapping="Wrap" />
						<TextBox
							Grid.Row="3"
							Grid.Column="1"
							Margin="10,10,0,0"
							md:HintAssist.Hint="이벤트 시간"
							md:HintAssist.IsFloating="True"
							IsReadOnly="True"
							Opacity="1"
							Text="{Binding DateTime, Mode=OneWay, StringFormat=yyyy-MM-dd HH:mm:ss}" />
					</Grid>
				</Grid>
			</Border>
		</md:Flipper.BackContent>
	</md:Flipper>
</UserControl>

