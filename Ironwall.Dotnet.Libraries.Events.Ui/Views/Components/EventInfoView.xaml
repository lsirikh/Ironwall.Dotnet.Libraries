<UserControl
	x:Class="Ironwall.Dotnet.Libraries.Events.Ui.Views.Components.EventInfoView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:cal="http://caliburnmicro.com"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:Ironwall.Dotnet.Libraries.Events.Ui.Views.Components"
	xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
	d:DesignHeight="450"
	d:DesignWidth="800"
	FontFamily="{DynamicResource MaterialDesignFont}"
	mc:Ignorable="d">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="0" />
			<ColumnDefinition Width="2*" />
			<ColumnDefinition Width="1*" />
		</Grid.ColumnDefinitions>

		<md:Card
			Grid.Row="1"
			Grid.Column="1"
			md:ThemeAssist.Theme="Inherit"
			Background="#22111188">
			<Grid Margin="0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="1*" />
				</Grid.ColumnDefinitions>
				<StackPanel
					Grid.Column="0"
					Margin="5,0,5,0"
					VerticalAlignment="Center"
					Orientation="Vertical">
					<CheckBox
						Margin="0,3"
						Content="DET"
						FontSize="15"
						FontWeight="Bold"
						Foreground="WhiteSmoke"
						IsChecked="{Binding IsDetectionEnable}"
						Visibility="{Binding IsDetectionActive, Converter={StaticResource BooleanToVisibilityConverter}}" />
					<CheckBox
						Margin="0,3"
						Content="MAL"
						FontSize="15"
						FontWeight="Bold"
						Foreground="WhiteSmoke"
						IsChecked="{Binding IsMalfunctionEnable}"
						Visibility="{Binding IsMalfunctionActive, Converter={StaticResource BooleanToVisibilityConverter}}" />
					<CheckBox
						Margin="0,3"
						Content="CON"
						FontSize="15"
						FontWeight="Bold"
						Foreground="WhiteSmoke"
						IsChecked="{Binding IsConnectionEnable}"
						Visibility="{Binding IsConnectionActive, Converter={StaticResource BooleanToVisibilityConverter}}" />
					<CheckBox
						Margin="0,3"
						Content="ACT"
						FontSize="15"
						FontWeight="Bold"
						Foreground="WhiteSmoke"
						IsChecked="{Binding IsActionEnable}"
						Visibility="{Binding IsActionActive, Converter={StaticResource BooleanToVisibilityConverter}}" />
				</StackPanel>
				<lvc:CartesianChart
					Grid.Column="1"
					LegendBackgroundPaint="{Binding LedgendBackgroundPaint}"
					LegendPosition="Right"
					LegendTextPaint="{Binding LegendTextPaint}"
					LegendTextSize="12"
					Series="{Binding LSeries}"
					TooltipTextSize="10"
					XAxes="{Binding XAxes}"
					YAxes="{Binding YAxes}"
					ZoomMode="X" />
			</Grid>
		</md:Card>
		<md:Card
			Grid.Row="1"
			Grid.Column="3"
			md:ThemeAssist.Theme="Inherit"
			Background="#22118811">
			<lvc:PieChart
				LegendBackgroundPaint="{Binding LedgendBackgroundPaint}"
				LegendPosition="Right"
				LegendTextPaint="{Binding LegendTextPaint}"
				LegendTextSize="12"
				Series="{Binding DSeries}" />
		</md:Card>

	</Grid>
</UserControl>
