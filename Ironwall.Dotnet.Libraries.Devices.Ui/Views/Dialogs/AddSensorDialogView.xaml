<UserControl
	x:Class="Ironwall.Dotnet.Libraries.Devices.Ui.Views.Dialogs.AddSensorDialogView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:cal="http://caliburnmicro.com"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:Ironwall.Dotnet.Libraries.Devices.Ui.Views.Dialogs"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
	d:Background="Gray"
	mc:Ignorable="d">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="7*" />
			<RowDefinition Height="4*" />
		</Grid.RowDefinitions>
		<Border
			Grid.Row="0"
			Margin="5"
			BorderBrush="White"
			BorderThickness="1"
			CornerRadius="10">
			<Grid Margin="20,5">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="1*" />
					<RowDefinition Height="1*" />
					<RowDefinition Height="1.5*" />
				</Grid.RowDefinitions>

				<TextBlock
					Grid.Row="0"
					Grid.Column="0"
					Grid.ColumnSpan="3"
					Margin="0,5"
					VerticalAlignment="Center"
					FontSize="15"
					Foreground="White"
					Text="센서 장비 추가" />
				<TextBox
					Grid.Row="1"
					Grid.Column="0"
					Margin="5,10"
					VerticalAlignment="Center"
					md:HintAssist.Hint="Count"
					md:TextFieldAssist.RippleOnFocusEnabled="False"
					FontSize="15"
					Style="{StaticResource MaterialDesignFloatingHintTextBox}"
					Text="{Binding ItemCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
					TextAlignment="Center" />
				<TextBox
					Grid.Row="1"
					Grid.Column="1"
					Margin="5,10"
					VerticalAlignment="Center"
					md:HintAssist.Hint="Tick Frequency"
					md:TextFieldAssist.RippleOnFocusEnabled="False"
					FontSize="15"
					Style="{StaticResource MaterialDesignFloatingHintTextBox}"
					Text="{Binding TickFrequency, UpdateSourceTrigger=PropertyChanged}"
					TextAlignment="Center" />
				<TextBox
					Grid.Row="1"
					Grid.Column="2"
					Margin="5,10"
					VerticalAlignment="Center"
					md:HintAssist.Hint="Maximum"
					md:TextFieldAssist.RippleOnFocusEnabled="False"
					FontSize="15"
					IsReadOnly="True"
					Style="{StaticResource MaterialDesignFloatingHintTextBox}"
					Text="{Binding Maximum, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
					TextAlignment="Center" />
				<Slider
					x:Name="Slider"
					Grid.Row="2"
					Grid.Column="0"
					Grid.ColumnSpan="3"
					Margin="0,5"
					VerticalAlignment="Center"
					cal:Message.Attach="[Event ValueChanged]=[Action OnChangeValue($source, $eventArgs)]"
					Maximum="{Binding Maximum, UpdateSourceTrigger=PropertyChanged}"
					Minimum="0"
					Style="{StaticResource MaterialDesignDiscreteSlider}"
					TickFrequency="{Binding TickFrequency, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
					TickPlacement="BottomRight"
					Value="{Binding ItemCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
			</Grid>
		</Border>
		<Border
			Grid.Row="1"
			Margin="5"
			BorderBrush="White"
			BorderThickness="1"
			CornerRadius="10">

			<StackPanel Orientation="Vertical">
				<TextBlock
					Margin="20,20,0,0"
					VerticalAlignment="Center"
					FontSize="15"
					Foreground="White"
					Text="Sensor Property" />
				<ScrollViewer Margin="5" VerticalScrollBarVisibility="Auto">

					<Grid Margin="20,10,10,10" VerticalAlignment="Stretch">
						<Grid.RowDefinitions>
							<RowDefinition Height="1*" />
							<RowDefinition Height="1*" />
							<RowDefinition Height="1*" />
							<RowDefinition Height="1*" />
							<RowDefinition Height="1*" />
							<RowDefinition Height="1*" />
							<RowDefinition Height="1*" />
							<RowDefinition Height="1*" />
							<RowDefinition Height="1*" />
							<RowDefinition Height="1*" />
							<RowDefinition Height="1*" />
						</Grid.RowDefinitions>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="1*" />
							<ColumnDefinition Width="1*" />
							<ColumnDefinition Width="1*" />
						</Grid.ColumnDefinitions>

						<!--  Group  -->
						<TextBlock
							Grid.Row="0"
							Grid.Column="0"
							Margin="0,5,0,0"
							VerticalAlignment="Center"
							FontSize="15"
							Text="Group" />
						<ComboBox
							Grid.Row="0"
							Grid.Column="1"
							Grid.ColumnSpan="2"
							Margin="0,-2,0,5"
							VerticalAlignment="Center"
							VerticalContentAlignment="Center"
							cal:Message.Attach="[Event SelectionChanged]=[Action OnGroupComboChanged($source, $eventArgs)]"
							md:HintAssist.Hint="Group"
							md:HintAssist.IsFloating="True"
							FontSize="15"
							ItemsSource="{Binding GroupProvider.CollectionEntity}"
							SelectedItem="{Binding SelectedGroupItem, Mode=TwoWay, UpdateSourceTrigger=LostFocus}">

							<ComboBox.ItemsPanel>
								<ItemsPanelTemplate>
									<VirtualizingStackPanel />
								</ItemsPanelTemplate>
							</ComboBox.ItemsPanel>
							<ComboBox.ItemTemplate>
								<DataTemplate>
									<StackPanel Orientation="Horizontal">
										<TextBlock Margin="10,0,0,0" Text="{Binding GroupNumber, StringFormat={}[{0}]}" />
										<TextBlock Margin="5,0,0,0" Text="{Binding GroupName, StringFormat={}{0}}" />
									</StackPanel>
								</DataTemplate>
							</ComboBox.ItemTemplate>
							<ComboBox.ItemContainerStyle>
								<Style TargetType="{x:Type ComboBoxItem}" />
							</ComboBox.ItemContainerStyle>
						</ComboBox>

						<!--  Starting Sensor Point  -->
						<TextBlock
							Grid.Row="2"
							Grid.Column="0"
							Margin="0,5,0,0"
							VerticalAlignment="Center"
							FontSize="15"
							Text="From Sensor" />
						<ComboBox
							Grid.Row="2"
							Grid.Column="1"
							Grid.ColumnSpan="2"
							Margin="0,-2,0,5"
							VerticalAlignment="Center"
							cal:Message.Attach="[Event SelectionChanged]=[Action OnSensorComboChanged($source, $eventArgs)]"
							md:HintAssist.Hint="Selecte the first sensor for the group"
							md:HintAssist.IsFloating="True"
							FontSize="15"
							ItemsSource="{Binding SensorProvider}"
							SelectedItem="{Binding SelectedSensorItem, Mode=TwoWay, UpdateSourceTrigger=LostFocus}">

							<ComboBox.ItemsPanel>
								<ItemsPanelTemplate>
									<VirtualizingStackPanel />
								</ItemsPanelTemplate>
							</ComboBox.ItemsPanel>
							<ComboBox.ItemTemplate>
								<DataTemplate>
									<StackPanel Orientation="Horizontal">
										<TextBlock Margin="10,0" Text="{Binding}" />
									</StackPanel>
								</DataTemplate>
							</ComboBox.ItemTemplate>
							<ComboBox.ItemContainerStyle>
								<Style TargetType="{x:Type ComboBoxItem}" />
							</ComboBox.ItemContainerStyle>
						</ComboBox>

						<!--  Starting Sensor Point  -->
						<TextBlock
							Grid.Row="3"
							Grid.Column="0"
							Margin="0,5,0,0"
							VerticalAlignment="Center"
							FontSize="15"
							Text="To Sensor" />

						<TextBox
							Grid.Row="3"
							Grid.Column="1"
							Grid.ColumnSpan="2"
							Margin="0,0,0,10"
							Padding="5,0,0,0"
							VerticalAlignment="Center"
							md:HintAssist.Hint="Selecte the last sensor for the group"
							md:HintAssist.IsFloating="True"
							FontSize="15"
							IsEnabled="False"
							Text="{Binding LastSensor}" />

					</Grid>

				</ScrollViewer>
			</StackPanel>

		</Border>
	</Grid>

</UserControl>