<UserControl
	x:Class="Ironwall.Dotnet.Libraries.Devices.Ui.Views.CameraSelectionView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:behavior="clr-namespace:Ironwall.Dotnet.Libraries.Utils.Behaviors;assembly=Ironwall.Dotnet.Libraries.Utils"
	xmlns:cal="http://caliburnmicro.com"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:enums="clr-namespace:Ironwall.Dotnet.Libraries.Enums;assembly=Ironwall.Dotnet.Libraries.Enums"
	xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
	xmlns:local="clr-namespace:Ironwall.Dotnet.Libraries.Devices.Ui.Views"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
	xmlns:sys="clr-namespace:System;assembly=mscorlib"
	xmlns:utilPass="clr-namespace:Ironwall.Dotnet.Libraries.Utils.PasswordControl;assembly=Ironwall.Dotnet.Libraries.Utils"
	xmlns:utils="clr-namespace:Ironwall.Dotnet.Libraries.Utils;assembly=Ironwall.Dotnet.Libraries.Utils"
	d:Background="WhiteSmoke"
	mc:Ignorable="d">

	<UserControl.Resources>
		<utils:BindingProxy x:Key="proxy" Data="{Binding}" />
	</UserControl.Resources>

	<GroupBox
		Margin="5"
		Style="{StaticResource MaterialDesignGroupBox}"
		UseLayoutRounding="True">
		<GroupBox.Header>
			<StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
				<md:PackIcon Kind="Settings" />
				<TextBlock
					Margin="5,0"
					VerticalAlignment="Center"
					Text="카메라 속성" />
			</StackPanel>
		</GroupBox.Header>
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>

			<Grid Grid.Row="0" >
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="2*" />
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="2*" />
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="2*" />
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="2*" />
				</Grid.ColumnDefinitions>

				<!--  Row 0  -->
				<!--  ───────────── ① DeviceNumber ─────────────  -->
				<TextBlock
					Grid.Row="0"
					Grid.Column="0"
					Style="{StaticResource TextBlockTitle}"
					Text="Device No" />
				<TextBox
					Grid.Row="0"
					Grid.Column="1"
					md:HintAssist.Hint="1"
					Style="{StaticResource TextBoxInput}"
					Text="{Binding DeviceNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

				<!--  ───────────── ② DeviceGroup ─────────────  -->
				<TextBlock
					Grid.Row="0"
					Grid.Column="2"
					Style="{StaticResource TextBlockTitle}"
					Text="Group" />
				<TextBox
					Grid.Row="0"
					Grid.Column="3"
					md:HintAssist.Hint="100"
					Style="{StaticResource TextBoxInput}"
					Text="{Binding DeviceGroup, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

				<!--  ───────────── ③ DeviceName ─────────────  -->
				<TextBlock
					Grid.Row="0"
					Grid.Column="4"
					Style="{StaticResource TextBlockTitle}"
					Text="Name" />
				<TextBox
					Grid.Row="0"
					Grid.Column="5"
					md:HintAssist.Hint="카메라001"
					Style="{StaticResource TextBoxInput}"
					Text="{Binding DeviceName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

				<!--  ───────────── ⑥ DeviceType ─────────────  -->
				<TextBlock
					Grid.Row="0"
					Grid.Column="6"
					Style="{StaticResource TextBlockTitle}"
					Text="Device Type" />
				<ComboBox
					Grid.Row="0"
					Grid.Column="7"
					ItemsSource="{Binding Source={utils:EnumBindingSource {x:Type enums:EnumDeviceType}}}"
					SelectedItem="{Binding DeviceType, Mode=TwoWay}"
					Style="{StaticResource ComboBoxContent}">
					<ComboBox.ItemsPanel>
						<ItemsPanelTemplate>
							<VirtualizingStackPanel />
						</ItemsPanelTemplate>
					</ComboBox.ItemsPanel>
					<ComboBox.ItemTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding}" />
						</DataTemplate>
					</ComboBox.ItemTemplate>
				</ComboBox>

				<!--  ───────────── ⑦ Version ─────────────  -->
				<TextBlock
					Grid.Row="1"
					Grid.Column="0"
					Style="{StaticResource TextBlockTitle}"
					Text="Ver." />
				<TextBox
					Grid.Row="1"
					Grid.Column="1"
					md:HintAssist.Hint="v1.0"
					Style="{StaticResource TextBoxInput}"
					Text="{Binding Version, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

				<!--  ───────────── ⑧ Status ─────────────  -->
				<TextBlock
					Grid.Row="1"
					Grid.Column="2"
					Style="{StaticResource TextBlockTitle}"
					Text="Status" />
				<ComboBox
					Grid.Row="1"
					Grid.Column="3"
					ItemsSource="{Binding Source={utils:EnumBindingSource {x:Type enums:EnumDeviceStatus}}}"
					SelectedItem="{Binding Status, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
					Style="{StaticResource ComboBoxContent}">
					<ComboBox.ItemsPanel>
						<ItemsPanelTemplate>
							<VirtualizingStackPanel />
						</ItemsPanelTemplate>
					</ComboBox.ItemsPanel>
					<ComboBox.ItemTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding}" />
						</DataTemplate>
					</ComboBox.ItemTemplate>
				</ComboBox>


				<!--  ───────────── ④ IpAddress ─────────────  -->
				<TextBlock
					Grid.Row="1"
					Grid.Column="4"
					Style="{StaticResource TextBlockTitle}"
					Text="IP" />
				<TextBox
					Grid.Row="1"
					Grid.Column="5"
					md:HintAssist.Hint="192.168.0.10"
					Style="{StaticResource TextBoxInput}"
					Text="{Binding IpAddress, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

				<!--  ───────────── ⑤ Port ─────────────  -->
				<TextBlock
					Grid.Row="1"
					Grid.Column="6"
					Style="{StaticResource TextBlockTitle}"
					Text="Port" />
				<TextBox
					Grid.Row="1"
					Grid.Column="7"
					md:HintAssist.Hint="9000"
					Style="{StaticResource TextBoxInput}"
					Text="{Binding Port, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
					<i:Interaction.Behaviors>
						<!--  숫자만 입력 강제용 Behavior  -->
						<behavior:NumericOnlyBehavior />
					</i:Interaction.Behaviors>
				</TextBox>

				<TextBlock
					Grid.Row="2"
					Grid.Column="0"
					Style="{StaticResource TextBlockTitle}"
					Text="Username" />
				<TextBox
					Grid.Row="2"
					Grid.Column="1"
					md:HintAssist.Hint="admin"
					Style="{StaticResource TextBoxInput}"
					Text="{Binding Username, Mode=TwoWay}" />

				<TextBlock
					Grid.Row="2"
					Grid.Column="2"
					Style="{StaticResource TextBlockTitle}"
					Text="Password" />
				<PasswordBox
					Grid.Row="2"
					Grid.Column="3"
					md:HintAssist.Hint="*******"
					PasswordChar="*"
					Style="{StaticResource PasswordBoxInput}">
					<i:Interaction.Behaviors>
						<behavior:PasswordBehavior Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
					</i:Interaction.Behaviors>
				</PasswordBox>

				<TextBlock
					Grid.Row="2"
					Grid.Column="4"
					Style="{StaticResource TextBlockTitle}"
					Text="RTSP URI" />
				<TextBox
					Grid.Row="2"
					Grid.Column="5"
					md:HintAssist.Hint="rtsp://"
					Style="{StaticResource TextBoxInput}"
					Text="{Binding RtspUri, Mode=TwoWay}" />

				<TextBlock
					Grid.Row="2"
					Grid.Column="6"
					Style="{StaticResource TextBlockTitle}"
					Text="RTSP Port" />
				<TextBox
					Grid.Row="2"
					Grid.Column="7"
					md:HintAssist.Hint="554"
					Style="{StaticResource TextBoxInput}"
					Text="{Binding RtspPort, Mode=TwoWay}" />

				<TextBlock
					Grid.Row="3"
					Grid.Column="0"
					Style="{StaticResource TextBlockTitle}"
					Text="Mode" />
				<ComboBox
					Grid.Row="3"
					Grid.Column="1"
					ItemsSource="{Binding Source={utils:EnumBindingSource {x:Type enums:EnumCameraMode}}}"
					SelectedItem="{Binding Mode, Mode=TwoWay}"
					Style="{StaticResource ComboBoxContent}">
					<ComboBox.ItemsPanel>
						<ItemsPanelTemplate>
							<VirtualizingStackPanel />
						</ItemsPanelTemplate>
					</ComboBox.ItemsPanel>
					<ComboBox.ItemTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding}" />
						</DataTemplate>
					</ComboBox.ItemTemplate>
				</ComboBox>

				<TextBlock
					Grid.Row="3"
					Grid.Column="2"
					Style="{StaticResource TextBlockTitle}"
					Text="Category" />
				<ComboBox
					Grid.Row="3"
					Grid.Column="3"
					ItemsSource="{Binding Source={utils:EnumBindingSource {x:Type enums:EnumCameraType}}}"
					SelectedItem="{Binding Category, Mode=TwoWay}"
					Style="{StaticResource ComboBoxContent}" />

				<!--  Button Row  -->
				<Grid
					Grid.Row="3"
					Grid.Column="4"
					Grid.ColumnSpan="4">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="1*" />
						<ColumnDefinition Width="1*" />

					</Grid.ColumnDefinitions>
					<Button
						x:Name="OnvifButton"
						Grid.Column="0"
						Margin="15,0"
						IsEnabled="{Binding IsOnvifButtonEnable}"
						Style="{StaticResource MaterialDesignFlatButton}">
						<Button.Content>
							<StackPanel Orientation="Horizontal">
								<md:PackIcon Kind="Video" Style="{StaticResource ButtonIcon}" />
								<TextBlock Style="{StaticResource ButtonTextBlock}" Text="Onvif" />
							</StackPanel>
						</Button.Content>
					</Button>
					<Button
						x:Name="ApplyButton"
						Grid.Column="1"
						Margin="15,0"
						Style="{StaticResource MaterialDesignFlatButton}">
						<Button.Content>
							<StackPanel Orientation="Horizontal">
								<md:PackIcon Kind="Check" Style="{StaticResource ButtonIcon}" />
								<TextBlock Style="{StaticResource ButtonTextBlock}" Text="적용" />
							</StackPanel>
						</Button.Content>
					</Button>
				</Grid>
			</Grid>

		</Grid>
	</GroupBox>

</UserControl>