<UserControl
	x:Class="Ironwall.Dotnet.Libraries.Devices.Ui.Views.CameraOpticsView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:Ironwall.Dotnet.Libraries.Devices.Ui.Views"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
	d:DesignHeight="450"
	d:DesignWidth="800"
	mc:Ignorable="d">
	<Grid Height="440" Margin="16">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="4*" />
			<ColumnDefinition Width="6*" />
		</Grid.ColumnDefinitions>

		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<!--  Zoom Level  -->
		<TextBlock
			Grid.Row="0"
			Grid.Column="0"
			Style="{StaticResource TextBlockTitle}"
			Text="Zoom Level" />
		<TextBox
			Grid.Row="0"
			Grid.Column="1"
			md:HintAssist.Hint="배율 (예: 1 ~ 50)"
			IsReadOnly="True"
			Style="{StaticResource TextBoxInput}"
			Text="{Binding ZoomLevel}" />

		<!--  Focal Length  -->
		<TextBlock
			Grid.Row="1"
			Grid.Column="0"
			Style="{StaticResource TextBlockTitle}"
			Text="Focal Length (mm)" />
		<TextBox
			Grid.Row="1"
			Grid.Column="1"
			md:HintAssist.Hint="초점 거리"
			IsReadOnly="True"
			Style="{StaticResource TextBoxInput}"
			Text="{Binding FocalLength}" />

		<!--  Sensor Width  -->
		<TextBlock
			Grid.Row="2"
			Grid.Column="0"
			Style="{StaticResource TextBlockTitle}"
			Text="센서 폭 (mm)" />
		<TextBox
			Grid.Row="2"
			Grid.Column="1"
			md:HintAssist.Hint="이미지 센서 가로 길이"
			IsReadOnly="True"
			Style="{StaticResource TextBoxInput}"
			Text="{Binding SensorWidth}" />

		<!--  Sensor Height  -->
		<TextBlock
			Grid.Row="3"
			Grid.Column="0"
			Style="{StaticResource TextBlockTitle}"
			Text="센서 높이 (mm)" />
		<TextBox
			Grid.Row="3"
			Grid.Column="1"
			md:HintAssist.Hint="이미지 센서 세로 길이"
			IsReadOnly="True"
			Style="{StaticResource TextBoxInput}"
			Text="{Binding SensorHeight}" />

		<!--  Horizontal FOV  -->
		<TextBlock
			Grid.Row="4"
			Grid.Column="0"
			Style="{StaticResource TextBlockTitle}"
			Text="수평 시야각 (°)" />
		<TextBox
			Grid.Row="4"
			Grid.Column="1"
			md:HintAssist.Hint="계산된 FOV"
			IsReadOnly="True"
			Style="{StaticResource TextBoxInput}"
			Text="{Binding HorizontalFOV, Mode=OneWay}" />

		<!--  View Distance  -->
		<TextBlock
			Grid.Row="5"
			Grid.Column="0"
			Style="{StaticResource TextBlockTitle}"
			Text="가시 거리 (m)" />
		<TextBox
			Grid.Row="5"
			Grid.Column="1"
			md:HintAssist.Hint="배율×10m (예: 30× → 300 m)"
			IsReadOnly="True"
			Style="{StaticResource TextBoxInput}"
			Text="{Binding ViewDistance, Mode=OneWay}" />
	</Grid>
</UserControl>
