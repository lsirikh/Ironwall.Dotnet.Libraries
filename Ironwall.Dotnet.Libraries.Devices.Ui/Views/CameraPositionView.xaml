<UserControl
	x:Class="Ironwall.Dotnet.Libraries.Devices.Ui.Views.CameraPositionView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:Ironwall.Dotnet.Libraries.Devices.Ui.Views"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
	d:DesignHeight="450"
	d:DesignWidth="800"
	mc:Ignorable="d">
	<Grid Height="440" Margin="16">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="4*" />
			<ColumnDefinition Width="6*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<TextBlock
			Grid.Row="0"
			Grid.Column="0"
			Style="{StaticResource TextBlockTitle}"
			Text="위도(°)" />
		<TextBox
			Grid.Row="0"
			Grid.Column="1"
			Style="{StaticResource TextBoxInput}"
			Text="{Binding Latitude, Mode=TwoWay}" />

		<TextBlock
			Grid.Row="1"
			Grid.Column="0"
			Style="{StaticResource TextBlockTitle}"
			Text="경도(°)" />
		<TextBox
			Grid.Row="1"
			Grid.Column="1"
			Style="{StaticResource TextBoxInput}"
			Text="{Binding Longitude, Mode=TwoWay}" />

		<TextBlock
			Grid.Row="2"
			Grid.Column="0"
			Style="{StaticResource TextBlockTitle}"
			Text="고도 (m)" />
		<TextBox
			Grid.Row="2"
			Grid.Column="1"
			Style="{StaticResource TextBoxInput}"
			Text="{Binding Altitude, Mode=TwoWay}" />

		<TextBlock
			Grid.Row="3"
			Grid.Column="0"
			Style="{StaticResource TextBlockTitle}"
			Text="Heading (°)" />
		<TextBox
			Grid.Row="3"
			Grid.Column="1"
			Style="{StaticResource TextBoxInput}"
			Text="{Binding Heading, Mode=TwoWay}" />
	</Grid>
</UserControl>
