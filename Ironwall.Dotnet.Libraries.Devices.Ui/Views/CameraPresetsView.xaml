<UserControl
	x:Class="Ironwall.Dotnet.Libraries.Devices.Ui.Views.CameraPresetsView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:Ironwall.Dotnet.Libraries.Devices.Ui.Views"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
	d:DesignHeight="450"
	d:DesignWidth="800"
	mc:Ignorable="d">
	<Grid Height="440" Margin="16">
		<!--  툴바  -->
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<Grid Grid.Row="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<Button
				Grid.Column="0"
				Margin="0,0,4,0"
				Command="{Binding OnClickAddPreset}"
				IsEnabled="False"
				Style="{StaticResource MaterialDesignFlatButton}">
				<md:PackIcon
					Width="20"
					Height="20"
					Kind="Plus" />
			</Button>
			<Button
				Grid.Column="1"
				md:ButtonProgressAssist.IsIndicatorVisible="False"
				Command="{Binding SelectedPreset, Mode=OneWay}"
				CommandParameter="{Binding SelectedItem, ElementName=PresetGrid}"
				IsEnabled="False"
				Style="{StaticResource MaterialDesignFlatButton}">
				<md:PackIcon
					Width="20"
					Height="20"
					Kind="Play" />
			</Button>
			<Button
				Grid.Column="2"
				Command="{Binding OnClickRemovePreset}"
				CommandParameter="{Binding SelectedItem, ElementName=PresetGrid}"
				IsEnabled="False"
				Style="{StaticResource MaterialDesignFlatButton}">
				<md:PackIcon
					Width="20"
					Height="20"
					Kind="Delete" />
			</Button>
		</Grid>

		<!--  목록  -->
		<DataGrid
			x:Name="PresetGrid"
			Grid.Row="1"
			HorizontalAlignment="Stretch"
			AutoGenerateColumns="True"
			IsReadOnly="False"
			ItemsSource="{Binding Presets}"
			MinColumnWidth="80"
			SelectionMode="Single" />

	</Grid>
</UserControl>
