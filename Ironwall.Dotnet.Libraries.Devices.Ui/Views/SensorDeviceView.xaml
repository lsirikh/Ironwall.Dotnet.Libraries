<UserControl
	x:Class="Ironwall.Dotnet.Libraries.Devices.Ui.Views.SensorDeviceView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:behavior="clr-namespace:Ironwall.Dotnet.Libraries.Utils.Behaviors;assembly=Ironwall.Dotnet.Libraries.Utils"
	xmlns:cal="http://caliburnmicro.com"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:enums="clr-namespace:Ironwall.Dotnet.Libraries.Enums;assembly=Ironwall.Dotnet.Libraries.Enums"
	xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
	xmlns:local="clr-namespace:Ironwall.Dotnet.Libraries.Devices.Ui.Views"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
	xmlns:sys="clr-namespace:System;assembly=mscorlib"
	xmlns:utilPass="clr-namespace:Ironwall.Dotnet.Libraries.Utils.PasswordControl;assembly=Ironwall.Dotnet.Libraries.Utils"
	xmlns:utils="clr-namespace:Ironwall.Dotnet.Libraries.Utils;assembly=Ironwall.Dotnet.Libraries.Utils"
	xmlns:vm="[vm ]clr-namespace:Ironwall.Dotnet.Libraries.Devices.Ui.Views.Dashboards"
	d:Background="WhiteSmoke"
	mc:Ignorable="d">
	<!--<UserControl.Resources>
		<utils:BindingProxy x:Key="proxy" Data="{Binding }" />
	</UserControl.Resources>-->
	<Grid Margin="20">
		<!--  두 줄 × 5 쌍 = 10 Column  -->
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="2*" MinWidth="50" />
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="2*" MinWidth="50" />
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="2*" MinWidth="50" />
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="2*" MinWidth="50" />
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="2*" MinWidth="50" />
		</Grid.ColumnDefinitions>

		<!--  ───────────── ① DeviceNumber ─────────────  -->
		<TextBlock
			Grid.Row="0"
			Grid.Column="0"
			Style="{StaticResource TextBlockTitle}"
			Text="Device&nbsp;No" />
		<TextBox
			Grid.Row="0"
			Grid.Column="1"
			md:HintAssist.Hint="1"
			Style="{StaticResource TextBoxInput}"
			Text="{Binding DeviceNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
			<i:Interaction.Behaviors>
				<behavior:NumericOnlyBehavior />
			</i:Interaction.Behaviors>
		</TextBox>

		<!--  ───────────── ② DeviceGroup ─────────────  -->
		<TextBlock
			Grid.Row="0"
			Grid.Column="2"
			Style="{StaticResource TextBlockTitle}"
			Text="Group" />
		<TextBox
			Grid.Row="0"
			Grid.Column="3"
			md:HintAssist.Hint="100"
			Style="{StaticResource TextBoxInput}"
			Text="{Binding DeviceGroup, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
			<i:Interaction.Behaviors>
				<behavior:NumericOnlyBehavior />
			</i:Interaction.Behaviors>
		</TextBox>

		<!--  ───────────── ③ DeviceName ─────────────  -->
		<TextBlock
			Grid.Row="0"
			Grid.Column="4"
			Style="{StaticResource TextBlockTitle}"
			Text="Name" />
		<TextBox
			Grid.Row="0"
			Grid.Column="5"
			md:HintAssist.Hint="펜스센서_01-001"
			Style="{StaticResource TextBoxInput}"
			Text="{Binding DeviceName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

		<!--  ───────────── ④ Controller(부모) ─────────────  -->
		<TextBlock
			Grid.Row="0"
			Grid.Column="6"
			Style="{StaticResource TextBlockTitle}"
			Text="Controller" />
		<!--  ViewModelProxy 는 기존 DataGrid 예시에서 사용하던 StaticResource  -->
		<ComboBox
			Grid.Row="0"
			Grid.Column="7"
			HorizontalContentAlignment="Center"
			ItemsSource="{Binding Data.Controllers, Source={StaticResource proxy}}"
			SelectedItem="{Binding Controller, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding DeviceName}" TextAlignment="Center" />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>

		<!--  ───────────── ⑤ DeviceType ─────────────  -->
		<TextBlock
			Grid.Row="0"
			Grid.Column="8"
			Style="{StaticResource TextBlockTitle}"
			Text="Type" />
		<ComboBox
			Grid.Row="0"
			Grid.Column="9"
			Margin="10,0,0,0"
			VerticalAlignment="Center"
			ItemsSource="{Binding Source={utils:EnumBindingSource {x:Type enums:EnumDeviceType}}}"
			SelectedItem="{Binding DeviceType, Mode=TwoWay}">
			<ComboBox.ItemsPanel>
				<ItemsPanelTemplate>
					<VirtualizingStackPanel />
				</ItemsPanelTemplate>
			</ComboBox.ItemsPanel>
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding}" />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>

		<!--  ========== 두 번째 행 =================================================  -->

		<!--  ───────────── ⑥ Version ─────────────  -->
		<TextBlock
			Grid.Row="1"
			Grid.Column="0"
			Style="{StaticResource TextBlockTitle}"
			Text="Version" />
		<TextBox
			Grid.Row="1"
			Grid.Column="1"
			md:HintAssist.Hint="v1.0"
			Style="{StaticResource TextBoxInput}"
			Text="{Binding Version, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

		<!--  ───────────── ⑦ Status ─────────────  -->
		<TextBlock
			Grid.Row="1"
			Grid.Column="2"
			Style="{StaticResource TextBlockTitle}"
			Text="Status" />

		<ComboBox
			Grid.Row="1"
			Grid.Column="3"
			Margin="10,0,0,0"
			VerticalAlignment="Center"
			ItemsSource="{Binding Source={utils:EnumBindingSource {x:Type enums:EnumDeviceStatus}}}"
			SelectedItem="{Binding Status, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
			<ComboBox.ItemsPanel>
				<ItemsPanelTemplate>
					<VirtualizingStackPanel />
				</ItemsPanelTemplate>
			</ComboBox.ItemsPanel>
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding}" />
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>

		<!--
			⑧·⑨·⑩ : 필요 시 다른 속성 추가하거나
			아래처럼 Width="0*" 으로 ColumnDefinition 조정해 숨길 수 있습니다.
		-->
	</Grid>

</UserControl>
