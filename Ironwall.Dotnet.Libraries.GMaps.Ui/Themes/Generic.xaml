<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:control="clr-namespace:Ironwall.Dotnet.Libraries.GMaps.Ui.GMapSymbols"
	xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes">


	<ResourceDictionary.MergedDictionaries>
		<!--  GMap Adorner Style  -->
		<ResourceDictionary Source="/Ironwall.Dotnet.Libraries.GMaps.Ui;component/Resources/GMapDesignerItemStyle.xaml" />
		<ResourceDictionary Source="/Ironwall.Dotnet.Libraries.GMaps.Ui;component/Resources/GMapResizeRotateChrome.xaml" />
		<!--  Ui Style  -->
		<ResourceDictionary Source="/Ironwall.Dotnet.Libraries.GMaps.Ui;component/Resources/Resources.xaml" />

		<!--  AdornerDecorator Library Style  -->
		<ResourceDictionary Source="/Ironwall.Dotnet.Libraries.AdornerDecorator;component/Resources/SizeChrome.xaml" />
		<ResourceDictionary Source="/Ironwall.Dotnet.Libraries.AdornerDecorator;component/Resources/ResizeRotateChrome.xaml" />
		<ResourceDictionary Source="/Ironwall.Dotnet.Libraries.AdornerDecorator;component/Styles/DesignerItemStyle.xaml" />
	</ResourceDictionary.MergedDictionaries>

	<Style TargetType="{x:Type control:GMapMarkerBasicCustomControl}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type control:GMapMarkerBasicCustomControl}">
					<Border
						Background="{TemplateBinding Background}"
						BorderBrush="{TemplateBinding BorderBrush}"
						BorderThickness="{TemplateBinding BorderThickness}" />
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>
