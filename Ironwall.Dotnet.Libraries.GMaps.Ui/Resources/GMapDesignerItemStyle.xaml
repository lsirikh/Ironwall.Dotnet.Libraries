<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:gmapThumbs="clr-namespace:Ironwall.Dotnet.Libraries.GMaps.Ui.Adorners"
	xmlns:thumbs="clr-namespace:Ironwall.Dotnet.Libraries.AdornerDecorator.Thumbs;assembly=Ironwall.Dotnet.Libraries.AdornerDecorator">

	<!--  기존 스타일을 복사하되, Thumb 타입만 GMap용으로 교체  -->
	<ControlTemplate x:Key="GMapMoveThumbTemplate" TargetType="{x:Type gmapThumbs:GMapMoveThumb}">
		<Rectangle Fill="Red" />
	</ControlTemplate>

	<Style x:Key="GMapDesignerItemStyle" TargetType="ContentControl">
		<Setter Property="MinHeight" Value="50" />
		<Setter Property="MinWidth" Value="50" />
		<Setter Property="RenderTransformOrigin" Value="0.5, 0.5" />
		<Setter Property="SnapsToDevicePixels" Value="True" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="ContentControl">
					<Grid DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}}">
						<!--  기존 MoveThumb → GMapMoveThumb으로 교체  -->
						<gmapThumbs:GMapMoveThumb
							x:Name="MoveDecorator"
							Cursor="SizeAll"
							Template="{StaticResource GMapMoveThumbTemplate}"
							Visibility="Collapsed" />

						<ContentControl Margin="{TemplateBinding Padding}" Content="{TemplateBinding ContentControl.Content}" />

						<!--  기존 DesignerItemDecorator 그대로 사용!  -->
						<thumbs:DesignerItemDecorator x:Name="ItemDecorator" />
					</Grid>

					<!--  기존 트리거 그대로 사용  -->
					<ControlTemplate.Triggers>
						<Trigger Property="Selector.IsSelected" Value="True">
							<Setter TargetName="ItemDecorator" Property="ShowDecorator" Value="True" />
							<Setter TargetName="MoveDecorator" Property="Visibility" Value="Visible" />
						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>	