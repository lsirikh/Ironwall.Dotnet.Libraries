<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:adorners="clr-namespace:Ironwall.Dotnet.Libraries.AdornerDecorator.Adorners;assembly=Ironwall.Dotnet.Libraries.AdornerDecorator"
	xmlns:gmapThumbs="clr-namespace:Ironwall.Dotnet.Libraries.GMaps.Ui.Adorners"
	xmlns:thumbs="clr-namespace:Ironwall.Dotnet.Libraries.AdornerDecorator.Thumbs;assembly=Ironwall.Dotnet.Libraries.AdornerDecorator">

	<!--  기존 ThumbCorner 스타일 그대로 사용  -->
	<Style x:Key="ThumbCorner" TargetType="{x:Type Shape}">
		<Setter Property="SnapsToDevicePixels" Value="True" />
		<Setter Property="Stroke" Value="#FFC8C8C8" />
		<Setter Property="StrokeThickness" Value="0.5" />
		<Setter Property="Width" Value="8" />
		<Setter Property="Height" Value="8" />
		<Setter Property="Margin" Value="-2" />
		<Setter Property="Fill">
			<Setter.Value>
				<RadialGradientBrush Center="0.2, 0.2" GradientOrigin="0.2, 0.2" RadiusX="0.8" RadiusY="0.8">
					<GradientStop Offset="0.0" Color="White" />
					<GradientStop Offset="0.8" Color="Gray" />
				</RadialGradientBrush>
			</Setter.Value>
		</Setter>
	</Style>

	<!--  기존 ResizeRotateChrome을 그대로 사용하되, Thumb만 교체  -->
	<Style TargetType="{x:Type adorners:ResizeRotateChrome}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type adorners:ResizeRotateChrome}">
					<Grid>
						<!--  투명한 조작 영역  -->
						<Grid Margin="-3" Opacity="0">
							<!--  기존 RotateThumb → GMapRotateThumb으로 교체  -->
							<gmapThumbs:GMapRotateThumb
								Width="7"
								Height="7"
								Margin="0,-20,0,0"
								HorizontalAlignment="Center"
								VerticalAlignment="Top"
								Cursor="Hand" />

							<!--  기존 ResizeThumb → GMapResizeThumb으로 교체  -->
							<gmapThumbs:GMapResizeThumb
								Height="3"
								HorizontalAlignment="Stretch"
								VerticalAlignment="Top"
								Cursor="SizeNS" />
							<gmapThumbs:GMapResizeThumb
								Width="3"
								HorizontalAlignment="Left"
								VerticalAlignment="Stretch"
								Cursor="SizeWE" />
							<gmapThumbs:GMapResizeThumb
								Width="3"
								HorizontalAlignment="Right"
								VerticalAlignment="Stretch"
								Cursor="SizeWE" />
							<gmapThumbs:GMapResizeThumb
								Height="3"
								HorizontalAlignment="Stretch"
								VerticalAlignment="Bottom"
								Cursor="SizeNS" />

							<!--  모서리 ResizeThumb들  -->
							<gmapThumbs:GMapResizeThumb
								Width="7"
								Height="7"
								Margin="-2"
								HorizontalAlignment="Left"
								VerticalAlignment="Top"
								Cursor="SizeNWSE" />
							<gmapThumbs:GMapResizeThumb
								Width="7"
								Height="7"
								Margin="-2"
								HorizontalAlignment="Right"
								VerticalAlignment="Top"
								Cursor="SizeNESW" />
							<gmapThumbs:GMapResizeThumb
								Width="7"
								Height="7"
								Margin="-2"
								HorizontalAlignment="Left"
								VerticalAlignment="Bottom"
								Cursor="SizeNESW" />
							<gmapThumbs:GMapResizeThumb
								Width="7"
								Height="7"
								Margin="-2"
								HorizontalAlignment="Right"
								VerticalAlignment="Bottom"
								Cursor="SizeNWSE" />
						</Grid>

						<!--  시각적 표시 (기존과 동일)  -->
						<Grid
							Margin="-3"
							IsHitTestVisible="False"
							Opacity="1">
							<Rectangle
								Margin="1"
								SnapsToDevicePixels="True"
								Stroke="Red"
								StrokeDashArray="1 2"
								StrokeThickness="1.5" />
							<Line
								Margin="0,-19,0,0"
								HorizontalAlignment="Center"
								VerticalAlignment="Top"
								Stroke="Red"
								StrokeDashArray="1 2"
								StrokeThickness="1.5"
								X1="0"
								X2="0"
								Y1="0"
								Y2="20" />

							<Ellipse
								Margin="-1,-20,0,0"
								HorizontalAlignment="Center"
								VerticalAlignment="Top"
								Style="{StaticResource ThumbCorner}" />
							<Ellipse
								HorizontalAlignment="Left"
								VerticalAlignment="Top"
								Style="{StaticResource ThumbCorner}" />
							<Ellipse
								HorizontalAlignment="Right"
								VerticalAlignment="Top"
								Style="{StaticResource ThumbCorner}" />
							<Ellipse
								HorizontalAlignment="Left"
								VerticalAlignment="Bottom"
								Style="{StaticResource ThumbCorner}" />
							<Ellipse
								HorizontalAlignment="Right"
								VerticalAlignment="Bottom"
								Style="{StaticResource ThumbCorner}" />
						</Grid>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>